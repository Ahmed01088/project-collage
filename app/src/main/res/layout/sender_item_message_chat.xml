<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="4dp"
    android:gravity="right"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="14dp"
        android:background="@drawable/chat_bubbles_right"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_user_sender"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/women2" />

        <TextView
            android:id="@+id/senderMessageUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:maxWidth="300dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/good_morning"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_gravity="bottom"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                app:srcCompat="@drawable/ic_done_all" />

            <TextView
                android:id="@+id/date_item_sender_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textSize="11sp"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:textColor="#FFFFFF"
                android:text="@string/_2_28_am" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>