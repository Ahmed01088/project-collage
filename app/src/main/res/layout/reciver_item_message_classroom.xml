<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="end"
    android:layoutDirection="ltr"
    android:paddingRight="@dimen/_16sdp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/studentClassroomPic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:background="@drawable/chat_bubbles_left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_verified_account_classroom"
                android:layout_width="@dimen/_14sdp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_14sdp"
                app:srcCompat="@drawable/verified_account" />

            <TextView
                android:id="@+id/person_send_message_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/name_person"
                android:textColor="#FFEA00"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_classroom_reciver"
            android:layout_width="@dimen/_200sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:srcCompat="@drawable/women" />

        <TextView
            android:id="@+id/reciverItemMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:maxWidth="300dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/message_classroom"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_item_reciver"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:layout_weight="1"
                android:textSize="11sp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="#B1CACD"
                android:text="@string/_2_28_am" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>