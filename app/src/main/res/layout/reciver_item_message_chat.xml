<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="left"
    android:paddingRight="16dp"
    android:layoutDirection="ltr"
    android:layout_marginTop="4dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:background="@drawable/chat_bubbles_left"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_user_reciver"
            android:layout_width="200dp"
            android:layout_marginEnd="-8dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:srcCompat="@drawable/women" />

        <TextView
            android:id="@+id/reciverMessageUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:maxWidth="300dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/good_evening"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_item_reciver_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:layout_weight="1"
                android:textSize="11sp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="#CDCFDA"
                android:text="@string/_2_28_am" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>