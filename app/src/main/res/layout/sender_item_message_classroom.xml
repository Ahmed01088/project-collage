<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="right"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingStart="2dp"
        android:paddingEnd="8dp"
        android:background="@drawable/chat_bubbles_right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="4dp"
            android:drawablePadding="6dp"
            android:paddingStart="8dp"
            android:paddingLeft="4dp"
            android:paddingEnd="8dp"
            android:paddingRight="4dp"
            android:text="@string/name_person"
            android:textColor="@color/main_bar"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_admin_panel_settings" />

        <ImageView
            android:id="@+id/image_classroom_sender"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            app:srcCompat="@drawable/women2" />

        <TextView
            android:id="@+id/senderItemMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:maxWidth="300dp"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:text="@string/message_classroom"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:paddingLeft="2dp"
                android:layout_gravity="bottom|left"
                android:paddingRight="2dp"
                app:srcCompat="@drawable/ic_done_all" />

            <TextView
                android:id="@+id/date_item_sender"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:text="@string/_2_28_am"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>