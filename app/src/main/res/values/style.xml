<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleInputText" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
    </style >
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:dialogCornerRadius">@dimen/_16sdp</item>
        <item name="android:popupElevation">@dimen/_4sdp</item>
        <item name="android:background">@color/main_bar</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:titleTextStyle">@style/titleSize</item>
        <item name="colorAccent">#cccccc</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:paddingLeft">@dimen/_4sdp</item>
        <item name="android:paddingRight">@dimen/_4sdp</item>
        <item name="buttonBarNegativeButtonStyle">@style/Negative</item>
        <item name="buttonBarPositiveButtonStyle">@style/Positive</item>
    </style>
    <style name="Negative" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor" >@color/statesBar</item>
        <item name="android:textSize" >@dimen/_14ssp</item>

    </style>
    <style name="Positive" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor" >@color/statesBar</item>
        <item name="android:textSize" >@dimen/_14ssp</item>
    </style>
    <style name="titleSize" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textSize" >@dimen/_16ssp</item>
    </style>
    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:layout_marginLeft">@dimen/_50sdp</item>
        <item name="android:layout_marginRight">@dimen/_50sdp</item>
    </style>
    <style name="BaseAppTheme" parent="android:Theme.Material">
        <item name="android:windowActivityTransitions">true</item>
    </style>
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">#007EF4</item>
    </style>
    <style name="SpinnerStyleFragments" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">#007EF4</item>
        <item name="android:mode">twoLine</item>
    </style>
    <style name="fab" parent="Widget.MaterialComponents.FloatingActionButton">
    <item name="background">@drawable/background_gradient</item>
</style>
</resources>